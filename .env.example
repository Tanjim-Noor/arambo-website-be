# Environment Configuration
NODE_ENV=development
PORT=4000

# MongoDB Configuration
# Local (Docker)
MONGODB_LOCAL_URI=mongodb://admin:password@localhost:27017/arambo_properties?authSource=admin

# Atlas (cloud) → replace <username>, <password>, <cluster-url>, <db-name>
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority

# Active connection → choose between LOCAL or ATLAS
MONGODB_URI=${MONGODB_LOCAL_URI}

# CORS Configuration
CORS_ORIGIN=*

# Authentication Configuration
SKIP_AUTH=false  # Set to true to bypass auth in development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m

# Admin Credentials for Seeding
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123